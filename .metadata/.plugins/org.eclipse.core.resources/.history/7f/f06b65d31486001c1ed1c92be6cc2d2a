package PortoSeguro;

import java.util.Scanner;

public class OlaMundo{
	
	public static void main(String[] args) {
		
		String name;
		int idade = 27;
		float altura;
		
		Scanner leia = new Scanner(System.in);
		
		System.out.println("Fala fiote");
		
		System.out.println("\nQual o nome: ");
		
		name = leia.nextLine();
		System.out.println("\nQual a tua altura");
		
		altura = leia.nextFloat();
		
		System.out.println("\n hahahahhahaha o nome do cara é "+name+" puta nego burro véi,  o cara tem "+idade+ " anos e "+altura+" de altura, puta nego tonto");
	}
	
}